<button type="button" class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#movementsModal">
    Movimientos
</button>

<div class="modal fade" id="movementsModal" tabindex="-1" aria-labelledby="movementsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="movementsModalLabel">Movimientos de papel</h5>
                <button type="button" class="btn btn-sm btn-primary" id="movementButton">Cambiar</button>
            </div>
            <div class="modal-body">
                <form action="/movements" method="post" id="insertMovement">
                    <div class="form-group mb-2">
                        <input type="number" min="{{items.0.id}}" class="form-control form-control-sm" placeholder="Id:" id="moditem-id" name="id">
                    </div>
                    <div class="form-group mb-2">
                        <input type="text" class="form-control form-control-sm" placeholder="Cantidad de papel:" id="modinput" name="modification">
                    </div>
                    <div class="form-group mb-2">
                        <textarea name="observation" class="form-control form-control-sm" placeholder="Observacion:"></textarea>
                    </div>
                    <div class="form-group d-flex align-items-center mb-2">
                        <div class="form-check me-2">
                            <input class="form-check-input" type="radio" name="movement" id="entrance" value="entrance">
                            <label class="form-check-label" for="entrance">
                                Entrada
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="movement" id="outlet" value="outlet">
                            <label class="form-check-label" for="outlet">
                                Salida
                            </label>
                        </div>
                    </div>
                    <div class="form-group d-flex justify-content-between">
                        <button class="btn btn-success">Notificar</button>
                    </div>
                </form>
                <form action="/searchMovement" method="post" id="searchMovements" target="_blank">
                    <div class="form-group mb-2 d-flex justify-content-between">
                        <input type="number" class="form-control form-control-sm me-2" placeholder="Id:" min="{{items.0.id}}" name="id">
                        <button class="btn btn-sm btn-success">Buscar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>