<button type="button" class="btn btn-primary me-2" data-bs-toggle="modal" data-bs-target="#searchModal">
    Buscar
</button>

<div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="searchModalLabel">Busqueda de papel</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="/search" method="post">
                    <div id="searchInputs">
                    </div>
                    <div class="form-group mb-3 d-flex">
                        <input type="text" class="form-control" name="prop" placeholder="Propiedad de la busqueda:">
                        <button type="button" class="btn" id="plusBtn"><i class="fas fa-plus"></i></button>
                    </div>
                    <div class="form-group d-flex justify-content-between align-items-center mb-2">
                        <div class="form-check me-2">
                            <input class="form-check-input" type="radio" name="type" id="typeRadio1">
                            <label class="form-check-label" for="typeRadio1">
                                Tipo
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="type" id="typeRadio2">
                            <label class="form-check-label" for="typeRadio2">
                                Lados
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="type" id="typeRadio3">
                            <label class="form-check-label" for="typeRadio3">
                                Modo
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="type" id="typeRadio4">
                            <label class="form-check-label" for="typeRadio4">
                                Procedencia/Destino
                            </label>
                        </div>
                    </div>
                    <div class="form-group d-flex justify-content-end">
                        <button type="button" class="btn btn-primary">Buscar<i class="fas fa-search ms-1"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>