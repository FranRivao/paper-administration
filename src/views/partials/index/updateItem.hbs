<div class="card p-0">
    <div class="card-header">
        <h6>Modificar elemento</h3>
    </div>
    <div class="card-body">
        <form action="/updateItem" method="post">
            <div class="form-group mb-2">
                <input type="number" min="{{items.0.id}}" class="form-control form-control-sm" placeholder="Id:" id="moditem-id" name="id">
            </div>
            <div class="form-group mb-2">
                <select name="field" id="modselect" class="form-select form-select-sm"></select>
            </div>
            <div class="form-group mb-2">
                <input type="text" class="form-control form-control-sm" placeholder="Modificacion:" id="modinput" name="modification">
                <textarea name="modification" id="modtextarea" class="form-control form-control-sm "></textarea>
                <select name="modification" id="modtype" class="form-select form-select-sm">
                    <option value=""></option>
                    {{#each types}}
                        <option value="{{id}}">{{type}}</option>
                    {{/each}}
                </select>
                <select name="modification" id="modmode" class="form-select form-select-sm">
                    <option value=""></option>
                    {{#each modes}}
                        <option value="{{id}}">{{mode}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="form-group">
                <button class="btn btn-sm btn-success">Modificar</button>
            </div>
        </form>
    </div>
</div>