<div id="data-table">
    <table class="table table-striped table-hover">
        <thead>
            {{> index/tableHead}}
        </thead>
        <tbody>
            <tr id="addItemTr">
                {{> index/addItem}}
            </tr>
            {{#each items}}
                <tr>
                    <td><button class="button-none idBtn" id="idBtn-{{id}}" data-bs-toggle="modal" data-bs-target="#movementsModal">{{id}}</button></td>
                    <td>{{type}}</td>
                    <td>{{sideA}} cm</td>
                    <td>{{sideB}} cm</td>
                    <td>{{grammage}}</td>
                    <td>{{sheets}}</td>
                    <td>{{mode}}</td>
                    <td>{{origin}}</td>
                    <td>{{weight}}</td>
                    <td>€ {{kgPurchasePrice}}</td>
                    <td>€ {{kgSellPrice}}</td>
                    <td>€ {{purchasePrice}}</td>
                    <td>€ {{sellPrice}}</td>
                    <td><textarea class="form-control" disabled>{{observation}}</textarea></td>
                </tr>
            {{/each}}
        </tbody>
    </table>

        <nav class="d-flex justify-content-end">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" href="/{{previousPage}}" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item"><a class="page-link" href="/">1</a></li>
                <li class="page-item"><a class="page-link" href="/1">2</a></li>
                <li class="page-item"><a class="page-link" href="/2">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="/{{nextPage}}" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
</div>